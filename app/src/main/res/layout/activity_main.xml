<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="20dp">

            <!-- Account Number -->
            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingStart="-15dp"
                android:hint="Account Number*"
                android:textColorHint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/acnum"
                    android:inputType="number"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textColor="@color/primary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Customer ID -->
            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:paddingStart="-15dp"
                android:hint="Customer Id*"
                android:textColorHint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/custid"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textColor="@color/primary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DOB -->
            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:paddingStart="-15dp"
                android:hint="Date of Birth*"
                android:textColorHint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dob"
                    android:maxLength="10"
                    android:inputType="number"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textColor="@color/primary"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mobile Number -->
            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:paddingStart="-15dp"
                android:hint="+91 Mobile Number*"
                android:textColorHint="@color/primary"
                app:prefixText="+91 "
                app:prefixTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mob"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textColor="@color/primary"
                    android:inputType="number"
                    android:maxLength="13"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_info"
                        android:tint="#C44A3D"/>

                    <TextView
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textColor="#C44A3D"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Provide your IPPB account details above for registration"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"/>

                <!-- Point 2 -->
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Ensure that the SIM of IPPB registered mobile number is active in this device"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Click here (UNDERLINED & CLICKABLE) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvClickHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click here"
                            android:textColor="#C44A3D"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:clickable="true"
                            android:focusable="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C44A3D"/>
                    </LinearLayout>

                    <!-- Remaining text (NORMAL) -->
                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="to find out your account and CIF details"
                        android:textColor="#6B6B6B"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM FIXED BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:text="Cancel"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            app:cornerRadius="28dp"
            app:backgroundTint="#E0E0E0"
            app:strokeColor="#B0B0B0"
            app:strokeWidth="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProceed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:text="Register"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            app:cornerRadius="28dp"
            app:backgroundTint="#9B2601"/>
    </LinearLayout>

</LinearLayout>
